				g++;
			}

			Console.WriteLine("Deseja alterar alguma? Digite 1 para SIM");
			Console.WriteLine("Digite qualquer outro numero para NAO");
			alteracao = int.Parse(Console.ReadLine());
			
			if(alteracao == 1){
				Console.WriteLine("Digite o numero da pergunta que deseja modificar");
				alteracao = int.Parse(Console.ReadLine());
			}
		
	
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
