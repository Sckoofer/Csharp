/*Esse questionário permite ao usuário a criação de sua próprias
perguntas e respostas. (No momento o código ainda n funciona)*/

using System;

class project
{
	
	static void Main()
	{
		string[] perguntas = new string[5];
		string[] respostas = new string[5];
		int NumPerg = 0;
		int NumResp = 0;
		int g =  0;
		
		
		
		
		
		Console.WriteLine("Nova versao");
		Console.WriteLine("Digite em números quantas perguntas deseja fazer?");
		NumPerg = int.Parse(Console.ReadLine());
		
		
		
		Console.Clear();
		
		for(int i = 0; i < NumPerg; i++){ //loop para receber as perguntas
			
			if(i > 0){Console.WriteLine("Já pode digitar a próxima: ");}
			Console.WriteLine("Digite sua(s) pergunta(s)");
			perguntas[i] = Console.ReadLine();
		}
		
		Console.WriteLine("As perguntas foram salvas:");
		
		while(g <= NumPerg){
			
			Console.WriteLine(perguntas[g]);
			
			g++;
		}
			
		Console.WriteLine("deseja alterar alguma?");
		Console.ReadKey();
		
		Console.WriteLine("Quantas repostas podem existir para a pergunta:");
		
		for(int i = 0; i < NumPerg; i++){
			Console.WriteLine("{0}", perguntas[i]);
			NumResp = int.Parse(Console.ReadLine());
			while( g <= NumResp){
				
				respostas[g] = Console.ReadLine();
				Console.WriteLine("Digite a proxima");
				
				g++;
			}
			
			
		}
		
		
		
		
		
		
		
		
		
		
		
		
	/*	Console.WriteLine("Perguntas e Respostas finalizadas");
		Console.WriteLine("---------------------------------");
		for(int i = 0; i < NumPerg; i++){
			Console.WriteLine("Pergunta número: {0} ", i+1);
			Console.WriteLine(perguntas[i]);
			
			Console.WriteLine("Resposta número: {0} ", i+1);
			for(int h = 0; h <= NumResp[i]; h++){
				
			Console.WriteLine(respostas[h]);
			}
		}*/
		
			
	
		Console.ReadKey();
	}



}
